    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellow_600"
        android:id="@+id/home_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atrox"
            android:text="@string/imdb"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginEnd="280dp"/>

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/yellow_600"
        android:src="@drawable/baseline_logout"
            android:layout_marginEnd="20dp"
            android:id="@+id/logOut_btn"
            android:onClick="logOut"/>

    </Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_btn"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_shape_yellow600"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/profile"
        android:fontFamily="@font/atrox"
        android:textSize="20sp"
        android:onClick="showProfile"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/categories_btn"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        app:layout_constraintStart_toEndOf="@id/vertical_guide1"
        app:layout_constraintEnd_toStartOf="@id/vertical_guide2"
        android:background="@drawable/button_shape_yellow600"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/categories"
        android:fontFamily="@font/atrox"
        android:textSize="20sp"
        android:onClick="showCategories"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_btn"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
        app:layout_constraintStart_toEndOf="@id/vertical_guide2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_shape_yellow600"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/new_btn"
        android:fontFamily="@font/atrox"
        android:textSize="20sp"
        android:onClick="toAddReport"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_home"
            app:layout_constraintTop_toBottomOf="@id/profile_btn"
            android:layout_marginTop="10dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".70"/>

</androidx.constraintlayout.widget.ConstraintLayout>