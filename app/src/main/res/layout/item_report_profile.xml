<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_lay_profile">

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:background="@android:color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/line"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/categoryIndicator_btn"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/movies"
        android:fontFamily="@font/atrox"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="110dp"
        android:breakStrategy="simple"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoryIndicator_btn"
        app:layout_constraintTop_toTopOf="@id/categoryIndicator_btn"
        tools:text="9/11 Is Going To Happen Again!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_tv"
        tools:text="faran"
        android:fontFamily="@font/atrox"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/categoryIndicator_btn"
        app:layout_constraintTop_toBottomOf="@id/categoryIndicator_btn" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_tv"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toEndOf="@id/title_tv"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        tools:text="20/90/93"
        android:textSize="5sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sender_tv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:singleLine="false"
        android:breakStrategy="simple"
        tools:text="Quentin Tarantino has announced that he is going to make a movie about the tragic 9/11; however, instead of airplanes, he has scripted two giant feet instead!!"/>

    <ImageView
        android:id="@+id/report_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/baseline_android_24" />



</androidx.constraintlayout.widget.ConstraintLayout>