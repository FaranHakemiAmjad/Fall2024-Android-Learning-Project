<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ProfileActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellow_600"
        android:id="@+id/profile_toolbar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_600"
            android:src="@drawable/baseline_arrow_back"
            android:layout_marginEnd="10dp"
            android:id="@+id/backToMain_btn"
            android:onClick="backFromProfile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/atrox"
            android:text="@string/profile"
            android:textColor="@color/black"
            android:textSize="30sp"/>

    </Toolbar>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="34dp"
        android:layout_height="17dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/atrox"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar" />

    <TextView
        android:id="@+id/fullName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/atrox"
        android:text="example"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/name_tv"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
        android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_tv"
            android:text="@string/email"
            android:textSize="20sp"
            android:fontFamily="@font/atrox"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullEmail_tv"
            android:text="example"
            android:textSize="20sp"
            android:fontFamily="@font/atrox"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/email_tv"
            app:layout_constraintTop_toBottomOf="@id/fullName_tv"
            android:layout_marginHorizontal="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_tv"
            android:text="@string/gender"
            android:textSize="20sp"
            android:fontFamily="@font/atrox"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_tv"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullGender_tv"
            android:text="example"
            android:textSize="20sp"
            android:fontFamily="@font/atrox"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/gender_tv"
            app:layout_constraintTop_toBottomOf="@id/fullEmail_tv"
            android:layout_marginHorizontal="24dp"/>

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:id="@+id/line"
        android:background="@android:color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/gender_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>